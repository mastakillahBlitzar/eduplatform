{{>header}}
<form action="/" method="POST" >
    <div class="form-row">
        <div class="col-6 offset-1">
            <label for="exampleInputEmail1">Nombre</label>
            <input class="form-control" type="text" name="nombre" required>
        </div>
        <div class="col-4">
            <label for="exampleInputEmail1">Password</label>
            <input class="form-control" type="password" name="password" placeholder="contraseña" required>
        </div>
    </div>
    <div class="form-row">
        <div class="col-3 offset-1">
            <label for="exampleInputEmail1">Matemáticas</label>
            <input class="form-control" type="number" name="matematicas" required>
        </div>
        <div class="col-3">
            <label for="exampleInputEmail1">Ingles</label>
            <input class="form-control" type="number" name="ingles" required>
        </div>
        <div class="col-4">
            <label for="exampleInputEmail1">Programación</label>
            <input class="form-control" type="number" name="programacion" required>
        </div>
    </div>
    <div class="form-group mb-2">
        <button>Guardar</button>
    </div>  
</form>
{{>footer}}