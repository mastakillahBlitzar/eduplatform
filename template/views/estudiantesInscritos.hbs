{{>header}}
<div class="container-fluid">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Cedula</th>
        <th scope="col">Nombre</th>
        {{#if isTeacher}}
        <th scope="col">Email</th>
        <th scope="col">Telefono</th>
        {{else}}
        <th scope="col"></th>
        {{/if}}
      </tr>
    </thead>
    <tbody>
      {{#each incripcionArray}}
      <tr>
        <td>{{documentoIdentidad}}</td>
        <td>{{nombre}}</td>
        {{#if ../isTeacher}}
        <td>{{correo}}</td>
        <td>{{telefono}}</td>
        {{else}}
        <td>
          <form action="/eliminarInscripcion" method="POST">
            <button type="submit" class="btn btn-danger" name="id" value="{{inscripcion}}">Eliminar</button>
          </form>
        </td>
        {{/if}}
      </tr>
      {{/each}}
    </tbody>
  </table>

  <form action="/curso" method="GET">
    <button type="submit" class="btn btn-primary">Volver</button>
  </form>
</div>
{{>footer}}